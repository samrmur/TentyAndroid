<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Permissions.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpamList.EmptyView.TextView" parent="Toolbar.Title">
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SeekbarStyle.Red" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
    </style>
</resources>
